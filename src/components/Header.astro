---
interface Props {
  title: string;
}

const { title } = Astro.props;
const year = new Date().getFullYear();
---

<header class="bg-gray-900 text-white py-8 text-center border-b-4 border-orange-400">
  <h1 class="text-4xl font-bold">{title}</h1>
  <p class="text-lg mt-2">Carreras en Colombia {year}.</p>
</header>
